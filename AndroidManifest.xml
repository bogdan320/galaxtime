<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.galaxtime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <provider android:name="com.galaxtime.database.BaseProvider"
            android:authorities="com.galaxtime.database.Planets"/>
        
        <receiver android:name=".widget.WidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_small"/>
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.galaxtime.widget.ACTION_WIDGET_RECEIVER"/>
            </intent-filter>
        </receiver>
        
        <activity android:name=".widget.WidgetConfigure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".widget.CreateNewWorld">
        </activity>
        <service android:name=".widget.updateService"
            	 android:enabled="true">
        </service>
    </application>

</manifest>