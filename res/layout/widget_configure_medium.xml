<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_medium" >

    <ImageView
        android:id="@+id/widget_medium_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/plan_1" />

    <TextView
        android:id="@+id/widget_medium_age"
        style="@style/mediumWidgetTextStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:text="Age" />

    <TextView
        android:id="@+id/widget_medium_date"
        style="@style/mediumWidgetTextStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:text="Date" />

    <ImageView 
        android:id="@+id/widget_medium_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_medium_image"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@+id/widget_medium_temperature"
        style="@style/mediumWidgetTextStyle"
        android:layout_alignTop="@+id/widget_medium_image"
        android:layout_toRightOf="@+id/widget_medium_image"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:text="Temperature" />

    <TextView
        android:id="@+id/widget_medium_weather"
        style="@style/mediumWidgetTextStyle"
        android:layout_below="@+id/widget_medium_timeOfDay"
        android:layout_toRightOf="@+id/widget_medium_image"
        android:layout_marginLeft="6dp"
        android:text="Weather" />

    <TextView
        android:id="@+id/widget_medium_planetName"
        style="@style/mediumWidgetTextStyle"
        android:layout_alignTop="@+id/widget_medium_image"
        android:layout_toLeftOf="@+id/widget_medium_image"
        android:layout_marginRight="6dp"
        android:layout_marginTop="30dp"
        android:text="planet" />

    <TextView
        android:id="@+id/widget_medium_timeOfDay"
        style="@style/mediumWidgetTextStyle"
        android:layout_toRightOf="@+id/widget_medium_image"
        android:layout_below="@+id/widget_medium_temperature"
        android:layout_marginLeft="6dp"
        android:text="TimeOfDay" />

</RelativeLayout>
