<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
	<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
	    
	<RelativeLayout
	    android:background="@drawable/background_smal" 
	    android:layout_width="fill_parent"
	    android:layout_height="105dp"
	    android:layout_marginTop="6dp">
	    <TextView
	        android:id="@+id/info_widget_small_date"
	        style="@style/smallWidgetTextStyle"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="8dp"
	        android:layout_marginTop="8dp"
	        android:text="Date" />
	    <ImageView
	        android:id="@+id/info_widget_small_time"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="8dp"
	        android:layout_centerVertical="true" />
	    <TextView
	        android:id="@+id/info_widget_small_age"
	        style="@style/smallWidgetTextStyle"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="2dp"
	        android:layout_marginLeft="8dp"
	        android:text="age" />
	    <RelativeLayout
	        android:id="@+id/info_relativeLayout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="10dp" >
	        <ImageView
	            android:id="@+id/info_widget_small_image"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:src="@drawable/plan_1" />
	        <TextView
	            android:id="@+id/info_widget_small_planetName"
	            style="@style/smallWidgetTextStyle"
	            android:layout_centerInParent="true"
	            android:text="planet" />
	    </RelativeLayout>
	    <TextView
	        android:id="@+id/info_widget_small_weather"
	        style="@style/smallWidgetTextStyle"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="2dp"
	        android:layout_marginRight="6dp"
	        android:text="weather" />
	    <TextView
	        android:id="@+id/info_widget_small_temperature"
	        style="@style/smallWidgetTextStyle"
	        android:layout_alignBottom="@+id/info_relativeLayout1"
	        android:layout_toLeftOf="@+id/info_relativeLayout1"
	        android:layout_marginRight="6dp"
	        android:text="Temperature" />
	    <TextView
	        android:id="@+id/info_widget_small_timeOfDay"
	        style="@style/smallWidgetTextStyle"
	        android:layout_alignTop="@+id/info_relativeLayout1"
	        android:layout_toLeftOf="@+id/info_relativeLayout1"
	        android:layout_marginRight="6dp"
	        android:text="timeOfDay" />
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="210dp"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="6dp"
	    android:background="@drawable/background_medium">
	    <ImageView
	        android:id="@+id/info_widget_medium_image"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="4dp"
	        android:src="@drawable/plan_1" />
	    <TextView
	        android:id="@+id/info_widget_medium_age"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="8dp"
	        android:layout_marginRight="10dp"
	        android:text="Age" />
	    <TextView
	        android:id="@+id/info_widget_medium_date"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="8dp"
	        android:layout_marginLeft="10dp"
	        android:textColor="#000000"
	        android:text="Date" />
	    <ImageView 
	        android:id="@+id/info_widget_medium_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/info_widget_medium_image"
	        android:layout_marginTop="2dp"
	        android:layout_centerHorizontal="true"/>
	    <TextView
	        android:id="@+id/info_widget_medium_temperature"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_alignTop="@+id/info_widget_medium_image"
	        android:layout_toRightOf="@+id/info_widget_medium_image"
	        android:layout_marginLeft="6dp"
	        android:layout_marginTop="6dp"
	        android:text="Temperature" />
	    <TextView
	        android:id="@+id/info_widget_medium_weather"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_below="@+id/info_widget_medium_timeOfDay"
	        android:layout_toRightOf="@+id/info_widget_medium_image"
	        android:layout_marginLeft="6dp"
	        android:text="Weather" />
	    <TextView
	        android:id="@+id/info_widget_medium_planetName"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_alignTop="@+id/info_widget_medium_image"
	        android:layout_toLeftOf="@+id/info_widget_medium_image"
	        android:layout_marginRight="6dp"
	        android:layout_marginTop="30dp"
	        android:text="planet" />
	    <TextView
	        android:id="@+id/info_widget_medium_timeOfDay"
	        style="@style/mediumWidgetTextStyle"
	        android:layout_toRightOf="@+id/info_widget_medium_image"
	        android:layout_below="@+id/info_widget_medium_temperature"
	        android:layout_marginLeft="6dp"
	        android:text="TimeOfDay" />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="315dp"
	    android:background="@drawable/background_large">
		<ImageView
	        android:id="@+id/info_widget_large_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="25dp"
	        android:layout_marginBottom="15dp"/>
		<ImageView 
		    android:id="@+id/info_widget_large_time"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginBottom="20dp"
	        android:layout_below="@+id/info_widget_small_date" />
		<RelativeLayout
		    android:layout_width="200dp"
		    android:layout_height="fill_parent"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginRight="6dp" >
		    <ImageView
		        android:id="@+id/info_widget_large_image"
		        android:layout_width="180dp"
		        android:layout_height="180dp"
		        android:layout_alignParentRight="true"
		   		android:layout_centerVertical="true"
		        android:src="@drawable/plan_1"  />
		    <TextView
		        android:id="@+id/info_widget_large_planetName"
		        style="@style/largeWidgetTextStyle"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="15dp"
		        android:text="planet" />
		    <TextView
			    android:id="@+id/info_widget_large_age"
			    style="@style/largeWidgetTextStyle"
			    android:layout_alignParentBottom="true"
			    android:layout_centerHorizontal="true"
			    android:layout_marginBottom="10dp"
			    android:text="age"/>
		</RelativeLayout>
		<TextView
		    android:id="@+id/info_widget_large_temperature"
		    style="@style/largeWidgetTextStyle"
		    android:layout_below="@+id/info_widget_large_timeOfDay"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="25dp"
		    android:text="Temperature" />
		<TextView
		    android:id="@+id/info_widget_large_weather"
		    style="@style/largeWidgetTextStyle"
		    android:layout_below="@+id/info_widget_large_temperature"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="25dp"
		    android:text="Weather" />
		<TextView
		    android:id="@+id/info_widget_large_timeOfDay"
		    style="@style/largeWidgetTextStyle"
		    android:layout_below="@+id/info_widget_large_time"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="25dp"
		    android:layout_marginTop="30dp"
		    android:text="TimeOfDay"/>
	</RelativeLayout>
	
		
	</LinearLayout>
	</ScrollView>

</LinearLayout>